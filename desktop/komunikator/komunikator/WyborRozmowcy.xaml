<Window x:Class="komunikator.WyborRozmowcy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:komunikator"
        mc:Ignorable="d"
        Title="WyborRozmowcy" Height="500" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="419"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" Height="27" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="button" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="0,10,0,0" VerticalAlignment="Top" Width="65" FontSize="8">
            <StackPanel>
                <TextBlock TextAlignment="Center">Dodaj</TextBlock>
                <TextBlock TextAlignment="Center">użytkownika</TextBlock>
            </StackPanel>
        </Button>
        <ListBox x:Name="listBox" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="419"/>

    </Grid>
</Window>
